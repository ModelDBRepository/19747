xopen("$(NEURONHOME)/lib/hoc/noload.hoc")


//----------------------------------------------------------------------------
//  general parameters
//----------------------------------------------------------------------------

dt=0.025
tstop = 100
runStopAt = tstop
steps_per_ms = 1/dt
celsius = 36
v_init = -70


//----------------------------------------------------------------------------
//  create calyx and MNTB neuron
//----------------------------------------------------------------------------

postAP=1 // current-clamp mode
xopen("prepost.hoc")
xopen("prespikes.hoc")


//----------------------------------------------------------------------------
//  setup interface
//----------------------------------------------------------------------------

nosess=0

nrnmainmenu()         // create main menu
if(nosess==1) {
  nrncontrolmenu()      // create control menu
  xmenuspikes()
} else {
  xopen("cohepsp.ses")
}


//----------------------------------------------------------------------------
//  initialise parameters
//----------------------------------------------------------------------------

prespikes()
